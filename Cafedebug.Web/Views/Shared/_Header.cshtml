@{
    ViewData["Title"] = "Café Debug | Seu Podcast de Tecnologia";
}

<header>
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class=" col-sm-12 col-md-3 col-lg-3">
                <div class="nav-logo">
                    <a class="Logo" href="#">
                        <img src="~/images/logo-cafedebug.png" />
                    </a>
                </div>
            </div>
            <div class="col-sm-9 d-md-none d-lg-none">
                <a class="soical-media" href="https://www.youtube.com/channel/UCLI7ho2zV2apQ2WHPGxkCQw"><i class="fab fa-youtube"></i></a>
                <a class="soical-media" href="https://twitter.com/cafedebug" target="_blank"><i class="fab fa-twitter-square"></i></a>

            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <div id="wrapper">
                    <div class="circle icon">
                        <span class="line top"></span>
                        <span class="line middle"></span>
                        <span class="line bottom"></span>
                    </div>
                </div>
            </button>

            <div class="col-sm-12 col-md-9 col-lg-9">
                <div class="navbar-collapse collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">@Html.ActionLink("Home", "Index", "Home") <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">@Html.ActionLink("Quem Somos", "Index", "About")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">@Html.ActionLink("Episódios", "Index", "Episode")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">@Html.ActionLink("Fale Conosco", "Index", "Contat")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">@Html.ActionLink("sponsores", "Index", "Sponsor")</a>
                        </li>

                    </ul>
                    <a class="soical-media" href="https://www.youtube.com/channel/UCLI7ho2zV2apQ2WHPGxkCQw"><i class="fab fa-youtube"></i></a>
                    <a class="soical-media" href="https://twitter.com/cafedebug" target="_blank"><i class="fab fa-twitter-square"></i></a>
                </div>
            </div>
        </nav>
    </div>
</header>
@section Scripts{
    <script type="text/javascript">
        debugger;
        $("#wrapper").click(function () {
            $(".icon").toggleClass("close");
        });

    </script>
}




