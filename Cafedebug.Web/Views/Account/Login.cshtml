<body>
    <!-- Modal/Pop-up - Mensagens -->
    <div id="mensagem-warning" class="alert alert-warning alert-dismissible fade hide" role="alert" style="display: none;">
        <h4 class="alert-heading">Atenção!</h4><hr>

        <!--Carrega o conteúdo js-->
        <p id="text-mensagem-warning"></p>
        <button type="button" class="close" data-dismiss="mensagem-warning" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div id="mensagem-danger" class="alert alert-danger alert-dismissible fade hide" role="alert" style="display: none;">
        <h4 class="alert-heading">Atenção!</h4><hr>
        <p id="text-mensagem-danger"></p>
        <button type="button" class="close" data-dismiss="mensagem-danger" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div id="mensagem-success" class="alert alert-success alert-dismissible fade hide" role="alert" style="display: none;">
        <h4 class="alert-heading">Atenção!</h4><hr>
        <p id="text-mensagem-success"></p>
        <button type="button" class="close" data-dismiss="mensagem-success" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-5">
                <section id="pagLogin">
                    <div id="logar">
                        <div class="input-group">

                            @using (Html.BeginForm("Autentication", "Account", FormMethod.Post, new { @class = "login", id = "FormLogin" }))
                            {
                                <div id="logologin" alt="café debug"></div>

                                <div class="input-group">
                                    @Html.TextBoxFor(u => u.Login, new { required = "required", id = "Login" })<i class="fas fa-user"></i><span>login</span>
                                </div>
                                <div class="input-group">
                                    @Html.TextBoxFor(u => u.Senha, new { required = "required", type = "password", id = "Password" })<i class="fas fa-lock"></i><span>senha</span>
                                </div>
                                <div class="input-group">
                                    <button  type="submit" class="btn-login" ><b>Logar</b></button>
                                </div>
                                <br />
                                <br /><br />
                                <div class="lembrar checkbox">
                                    <label class="linhadbt"><input type="checkbox" id="LembrarSenha" , name="LembrarSenha" value="lembrarSenha"><small>lembrar senha</small></label>
                                    <label class="linhadbt">
                                        @Html.ActionLink("Esqueci minha senha", "PasswordForgout", "Account", new { @name = "LembrarSenha", @id = "LembrarSenha" }, null)
                                    </label>
                                </div>
                            }
                        </div>
                        <div id="loader" class="loader" width="20px" height="20px">
                            <img src="~/images/loader.gif" alt="Carregando..." />
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</body>
</html>
