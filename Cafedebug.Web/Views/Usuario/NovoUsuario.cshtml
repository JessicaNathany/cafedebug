@model Cafedebug.Business.Usuario

@{
    ViewData["Novo Usuário"] = "Novo Usuário | Café Debug";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<html>
<body>
    <div id="content">
        <div class="container">
            <div class="row">
                <div id="boxmeio" class="col-sm-10 center-block">
                    <legend>Novo Usuário</legend>
                    <div id="boxscroll">
                        <div class="form-group">
                            <div class="form-group col-md-2  text-left">
                                @Html.LabelFor(u => u.Nome, "Nome")
                            </div>
                            <div class="form-group col-md-12 ">
                                <div class="">
                                    @Html.TextBoxFor(u => u.Nome, new { required = "required", @name = "Nome", @id = "Nome" , @class = "form-control input-md" })
                                    @*<input id="textinput" name="textinput" type="text" class="form-control input-md" required>*@
                                </div>
                            </div>
                            <div class="form-group w-100">
                                <div class="form-group col-md-2  text-left">
                                    <label class="control-label  " for="textinput">Email</label>
                                </div>
                                <div class="form-group col-md-12 ">
                                    <div class="">
                                        <input id="textinput" name="textinput" type="text" class="form-control input-md" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-group col-md-2  text-left">
                                        <label class="control-label  " for="textinput">Login</label>
                                    </div>
                                    <div class="form-group col-md-12 ">
                                        <div class="">
                                            <input id="textinput" name="textinput" type="text" class="form-control input-md" required>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2  text-left">
                                        <label class="control-label  " for="textinput">Senha</label>
                                    </div>
                                    <div class="form-group col-md-12 ">
                                        <div class="">
                                            <input id="textinput" name="textinput" type="text" class="form-control input-md" required>
                                        </div>
                                    </div>
                                    <!--Perfil-->
                                    <div class="col-md-6 floatl">
                                        <select class="browser-default custom-select mb-4" id="select">
                                            <option value="" disabled="" selected="" required>Perfil</option>
                                            <option value="1">Administrador</option>
                                            <option value="2">Usuário</option>
                                        </select>
                                    </div>
                                    <!-- Upload Image -->
                                    <div class="form-group linhaupload">
                                        <div class="input-group mb-4">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Upload</span>
                                            </div>
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="fileInput" aria-describedby="fileInput" required>
                                                <label class="custom-file-label" for="fileInput">Carregar imagem...</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 floatl flag_ativo">
                                        <div class="custom-control custom-switch swicth">
                                            <input type="checkbox" class="custom-control-input" id="customSwitch1" checked>
                                            <label class="custom-control-label" for="customSwitch1">Ativo</label>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <a href="#" class="btn btn-sm btn-success">Salvar</a>
                                        <a href="#" class="btn btn-sm btn-danger">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
