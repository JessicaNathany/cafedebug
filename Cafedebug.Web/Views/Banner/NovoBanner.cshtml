@model Cafedebug.Business.Models.Banner

@{
    ViewData["Title"] = "Novo Banner | Café Debug";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
</head>
<body>
    <div id="content">
        <div class="container">
            <div class="row">
                <div id="boxmeio" class="col-sm-10 center-block">
                    <legend>Novo Banner</legend>
                    <div id="boxscroll">
                        <form class="form-horizontal episodioo">
                            <fieldset>
                                <div class="form-group col-md-9 floatl">
                                    <label class="control-label" for="textinput">Nome do Banner</label>
                                    <div class="">
                                        <input id="textinput" name="textinput" type="text" class="form-control input-md" required>
                                    </div>
                                </div>
                                <div class="form-group col-md-9 floatl">
                                    <label class="control-label" for="textinput">Data Inicial</label>
                                    <div class="">
                                        <input id="textinput" name="textinput" type="text" class="form-control input-md" required>
                                    </div>
                                </div>
                                <div class="form-group col-md-9 floatl">
                                    <label class="control-label" for="textinput">Data Final</label>
                                    <div class="">
                                        <input id="textinput" name="textinput" type="text" class="form-control input-md" required>
                                    </div>
                                </div>
                                <div class="form-group col-md-9 floatl">
                                    <label class="control-label" for="textinput">Url</label>
                                    <div class="">
                                        <input id="textinput" name="textinput" type="text" class="form-control input-md" required>
                                    </div>
                                </div>
                                <div class="col-md-6 floatl flag_ativo">
                                    <div class="custom-control custom-switch swicth">
                                        <input type="checkbox" class="custom-control-input" id="customSwitch1" checked>
                                        <label class="custom-control-label" for="customSwitch1">Ativo</label>
                                    </div>
                                </div>
                                <!-- Upload Image -->
                                <div class="form-group linhaupload">
                                    <div class="input-group mb-4">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Upload</span>
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="fileInput" aria-describedby="fileInput" required>
                                            <label class="custom-file-label" for="fileInput">carregar imagem...</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <a href="#" class="btn btn-sm btn-success">Salvar</a>
                                    <a href="#" class="btn btn-sm btn-danger">Cancelar</a>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script type="text/javascript">

    $(document).ready(function () {

        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
            $(this).toggleClass('active');
        });
    });
</script>